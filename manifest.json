{
    "name": "Our Brands Extension",
    "description": "Reveal which projects are from Amazon-owned brands.",
    "version": "0.7",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": [
            "https://www.amazon.com/s?*"
          ],
          "js": ["ajax.js", "content.js"],
          "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/icons/16.png",
            "19": "/assets/icons/19.png",
            "32": "/assets/icons/32.png",
            "64": "/assets/icons/64.png",
            "128": "/assets/icons/128.png"
        }
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "icons": {
        "16": "/assets/icons/16.png",
        "19": "/assets/icons/19.png",
        "32": "/assets/icons/32.png",
        "64": "/assets/icons/64.png",
        "128": "/assets/icons/128.png"
    }
}