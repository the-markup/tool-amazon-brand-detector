{
    "name": "Amazon Brand Detector",
    "description": "A browser extension that identifies Amazon brands and exclusives while you shop online.",
    "version": "0.0.2",
    "manifest_version": 2,
    "content_scripts": [
        {
          "matches": [
            "https://*.amazon.com/s?*",
            "https://*.amazon.co.uk/s?*",
            "https://*.amazon.in/s?*",
            "https://*.amazon.co.jp/s?*",
            "https://*.amazon.de/s?*",
            "https://*.amazon.ca/s?*",
            "https://*.amazon.it/s?*",
            "https://*.amazon.com.mx/s?*",
            "https://*.amazon.com.au/s?*",
            "https://*.amazon.fr/s?*",
            "https://*.amazon.es/s?*"
          ],
          "js": ["ajax.js", "content.js", "js-yaml.min.js"],
          "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "/assets/icons/16.png",
            "19": "/assets/icons/19.png",
            "32": "/assets/icons/32.png",
            "64": "/assets/icons/64.png",
            "128": "/assets/icons/128.png"
        }
    },
    "permissions": [
        "tabs",
        "storage",
        "https://raw.githubusercontent.com/the-markup/tool-amazon-brand-detector/main/extension/data/api_params.json"
    ],
    "web_accessible_resources": [
        "data/asins.yaml",
        "data/titles.yaml",
        "data/subtitles.yaml"
    ],
    "icons": {
        "16": "/assets/icons/16.png",
        "19": "/assets/icons/19.png",
        "32": "/assets/icons/32.png",
        "64": "/assets/icons/64.png",
        "128": "/assets/icons/128.png"
    },
    "browser_specific_settings": {
        "gecko": {
          "id": "amazon-brand-detector@markup.org"
        }
      }
      
}